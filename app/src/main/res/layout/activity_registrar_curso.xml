<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    tools:context=".registrar_curso">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/registrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar curso"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textSize="36sp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_margin="20dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <EditText
                        android:id="@+id/txt_Nombre"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/editpp"
                        android:layout_marginTop="40dp"
                        android:drawableLeft="@drawable/ic_baseline_email_24"
                        android:drawableTint="@color/letra"
                        android:drawablePadding="10dp"
                        android:hint="Nombre del Curso"
                        android:padding="8dp"
                        android:textColor="@color/letra" />

                    <EditText
                        android:id="@+id/txt_Horario"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/editpp"
                        android:layout_marginTop="40dp"
                        android:drawableLeft="@drawable/ic_baseline_access_time_24"
                        android:drawableTint="@color/letra"
                        android:drawablePadding="10dp"
                        android:hint="Horario"
                        android:padding="8dp"
                        android:textColor="@color/letra" />

                    <EditText
                        android:id="@+id/txt_Codigo"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/editpp"
                        android:layout_marginTop="40dp"
                        android:drawableLeft="@drawable/ic_baseline_numbers_24"
                        android:drawableTint="@color/letra"
                        android:drawablePadding="10dp"
                        android:hint="Codigo"
                        android:padding="8dp"
                        android:textColor="@color/letra" />

                    <EditText
                        android:id="@+id/txt_Sillabus"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/editpp"
                        android:layout_marginTop="40dp"
                        android:drawableLeft="@drawable/ic_baseline_edit_note_24"
                        android:drawableTint="@color/letra"
                        android:drawablePadding="10dp"
                        android:hint="Sillabus"
                        android:padding="8dp"
                        android:textColor="@color/letra" />

                    <EditText
                        android:id="@+id/txt_Carrera"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/editpp"
                        android:layout_marginTop="40dp"
                        android:drawableLeft="@drawable/ic_baseline_engineering_24"
                        android:drawableTint="@color/letra"
                        android:drawablePadding="10dp"
                        android:hint="Carrera"
                        android:padding="8dp"
                        android:textColor="@color/letra" />



                    <Button
                        android:id="@+id/btn_registrar_curso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/orange"
                        android:text="Registrar"
                        android:textSize="18sp"
                        app:cornerRadius="20dp" />


                </LinearLayout>


            </ScrollView>



        </LinearLayout>


</LinearLayout>