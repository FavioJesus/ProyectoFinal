<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro_alumno"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView

            android:id="@+id/registrar_alumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Alumno"
            android:textAlignment="center"
            android:textColor="@color/orange"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_margin="20dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <EditText
                    android:id="@+id/txt_CodigoAlumno"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/editpp"
                    android:layout_marginTop="40dp"
                    android:drawableLeft="@drawable/ic_baseline_numbers_24"
                    android:drawableTint="@color/letra"
                    android:drawablePadding="10dp"
                    android:hint="Codigo de Alumno "
                    android:padding="8dp"
                    android:textColor="@color/letra" />

                <EditText
                    android:id="@+id/txt_NombreAlumno"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/editpp"
                    android:layout_marginTop="40dp"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:drawableTint="@color/letra"
                    android:drawablePadding="10dp"
                    android:hint="Nombre de Alumno"
                    android:padding="8dp"
                    android:textColor="@color/letra" />



                <EditText
                    android:id="@+id/txt_ApellidoAlumno"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/editpp"
                    android:layout_marginTop="40dp"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:drawableTint="@color/letra"
                    android:drawablePadding="10dp"
                    android:hint="Apellidos del Alumno"
                    android:padding="8dp"
                    android:textColor="@color/letra" />

                <EditText
                    android:id="@+id/txt_CorreoAlumno"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/editpp"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/letra"
                    android:hint="Correo del Alumno"
                    android:padding="8dp"
                    android:textColor="@color/letra" />




                <Button
                    android:id="@+id/btn_registrar_alumno"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="30dp"
                    android:backgroundTint="@color/orange"
                    android:text="Registrar"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    app:cornerRadius="20dp" />


            </LinearLayout>


        </ScrollView>



    </LinearLayout>


</LinearLayout>